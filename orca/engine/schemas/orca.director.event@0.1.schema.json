{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ORCA Director Event",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string"
        },
        "source": {
            "type": "string"
        },
        "payload": {
            "type": "object"
        },
        "severity": {
            "enum": [
                "info",
                "warn",
                "error",
                "critical"
            ]
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "source"
    ]
}