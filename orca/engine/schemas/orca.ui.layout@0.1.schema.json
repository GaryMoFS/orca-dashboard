{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Orca UI Layout",
    "type": "object",
    "properties": {
        "layout_id": {
            "type": "string"
        },
        "modules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "position": {
                        "type": "string",
                        "enum": [
                            "left",
                            "right",
                            "top",
                            "bottom",
                            "center"
                        ]
                    }
                },
                "required": [
                    "id",
                    "position"
                ]
            }
        }
    },
    "required": [
        "layout_id",
        "modules"
    ]
}