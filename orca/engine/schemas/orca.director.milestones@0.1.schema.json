{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ORCA Director Milestones",
    "type": "object",
    "required": [
        "milestones"
    ],
    "properties": {
        "milestones": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "status",
                    "order"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "status": {
                        "enum": [
                            "not_started",
                            "next",
                            "in_progress",
                            "done"
                        ]
                    },
                    "order": {
                        "type": "integer"
                    },
                    "notes": {
                        "type": "string"
                    },
                    "updated_ts": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}