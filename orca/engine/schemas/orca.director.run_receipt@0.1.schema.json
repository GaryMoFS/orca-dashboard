{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ORCA Director Run Receipt",
    "type": "object",
    "properties": {
        "run_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "persona_id": {
            "type": "string"
        },
        "status": {
            "enum": [
                "success",
                "failure",
                "aborted"
            ]
        },
        "duration_ms": {
            "type": "integer"
        },
        "summary": {
            "type": "string"
        }
    },
    "required": [
        "run_id",
        "timestamp",
        "persona_id",
        "status"
    ]
}