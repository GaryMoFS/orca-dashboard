[
    {
        "id": "cap.txt_to_ifc",
        "title": "Text to IFC",
        "description": "Convert natural language building descriptions to Industry Foundation Classes (IFC) models.",
        "status": "demo",
        "inputs": [
            "text"
        ],
        "outputs": [
            "ifc",
            "manifest",
            "receipt"
        ],
        "tags": [
            "generative",
            "bim"
        ],
        "persona_gates": [
            "pro"
        ],
        "scripts": {
            "verify": [
                "python tools/verify_txt_to_ifc_m14.py"
            ]
        },
        "actions": [
            {
                "id": "run_demo",
                "title": "Run v0 Demo",
                "description": "Generate a minimal IFC box room from parameters.",
                "entrypoint": "python:orca.capabilities.txt_to_ifc.txt_to_ifc:run",
                "param_schema": {
                    "properties": {
                        "name": {
                            "type": "string",
                            "default": "Room"
                        },
                        "width_mm": {
                            "type": "integer",
                            "default": 4000,
                            "minimum": 500,
                            "maximum": 50000
                        },
                        "depth_mm": {
                            "type": "integer",
                            "default": 3000,
                            "minimum": 500,
                            "maximum": 50000
                        },
                        "height_mm": {
                            "type": "integer",
                            "default": 2700,
                            "minimum": 500,
                            "maximum": 20000
                        }
                    },
                    "required": [
                        "name"
                    ]
                },
                "outputs": [
                    "ifc",
                    "manifest"
                ]
            }
        ]
    },
